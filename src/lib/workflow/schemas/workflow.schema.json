{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nextproject.com/schemas/workflow.json",
  "title": "Workflow Schema",
  "description": "Schema for workflow definitions",
  "type": "object",
  "required": ["id", "name", "version", "nodes", "connections", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_]+$",
      "minLength": 1,
      "maxLength": 100,
      "description": "Unique workflow identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable workflow name"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Workflow description"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/workflowNode"
      },
      "minItems": 1,
      "description": "Workflow nodes"
    },
    "connections": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/connection"
      },
      "description": "Node connections"
    },
    "config": {
      "$ref": "#/definitions/workflowConfig"
    },
    "variables": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/workflowVariable"
      },
      "description": "Workflow variables"
    },
    "inputs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/workflowInput"
      },
      "description": "Workflow inputs"
    },
    "outputs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/workflowOutput"
      },
      "description": "Workflow outputs"
    },
    "triggers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/workflowTrigger"
      },
      "description": "Workflow triggers"
    }
  },
  "definitions": {
    "metadata": {
      "type": "object",
      "required": ["createdAt", "updatedAt", "version"],
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "workflowNode": {
      "type": "object",
      "required": ["id", "nodeId", "inputs"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9-_]+$",
          "description": "Unique node instance ID"
        },
        "nodeId": {
          "type": "string",
          "description": "Reference to node definition"
        },
        "name": {
          "type": "string",
          "description": "Override display name"
        },
        "inputs": {
          "type": "object",
          "description": "Input values or references"
        },
        "config": {
          "type": "object",
          "description": "Node configuration overrides"
        },
        "position": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" }
          }
        }
      }
    },
    "connection": {
      "type": "object",
      "required": ["id", "source", "target"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9-_]+$"
        },
        "source": {
          "$ref": "#/definitions/connectionEndpoint"
        },
        "target": {
          "$ref": "#/definitions/connectionEndpoint"
        },
        "type": {
          "type": "string",
          "enum": ["data", "control", "conditional", "loop", "error"]
        },
        "condition": {
          "$ref": "#/definitions/connectionCondition"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "label": { "type": "string" },
            "description": { "type": "string" },
            "color": { "type": "string" }
          }
        }
      }
    },
    "connectionEndpoint": {
      "type": "object",
      "required": ["nodeId"],
      "properties": {
        "nodeId": {
          "type": "string"
        },
        "port": {
          "type": "string"
        },
        "edge": {
          "type": "string"
        }
      }
    },
    "connectionCondition": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["expression", "value", "custom"]
        },
        "expression": {
          "type": "string"
        },
        "value": {},
        "operator": {
          "type": "string",
          "enum": ["eq", "ne", "gt", "lt", "gte", "lte", "contains", "regex"]
        }
      }
    },
    "workflowConfig": {
      "type": "object",
      "properties": {
        "retryPolicy": {
          "$ref": "#/definitions/retryPolicy"
        },
        "timeout": {
          "type": "number",
          "minimum": 0
        },
        "maxConcurrentNodes": {
          "type": "number",
          "minimum": 1
        },
        "errorHandling": {
          "type": "string",
          "enum": ["fail-fast", "continue", "retry", "fallback"]
        },
        "logging": {
          "$ref": "#/definitions/loggingConfig"
        },
        "scheduling": {
          "$ref": "#/definitions/schedulingConfig"
        }
      }
    },
    "retryPolicy": {
      "type": "object",
      "required": ["enabled", "maxAttempts", "backoffType", "initialDelay"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "maxAttempts": {
          "type": "number",
          "minimum": 1,
          "maximum": 10
        },
        "backoffType": {
          "type": "string",
          "enum": ["fixed", "exponential", "linear"]
        },
        "initialDelay": {
          "type": "number",
          "minimum": 0
        },
        "maxDelay": {
          "type": "number",
          "minimum": 0
        },
        "retryableErrors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "loggingConfig": {
      "type": "object",
      "required": ["level", "includeNodeInputs", "includeNodeOutputs", "includeState"],
      "properties": {
        "level": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"]
        },
        "includeNodeInputs": {
          "type": "boolean"
        },
        "includeNodeOutputs": {
          "type": "boolean"
        },
        "includeState": {
          "type": "boolean"
        }
      }
    },
    "schedulingConfig": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "cron": {
          "type": "string"
        },
        "timezone": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "workflowVariable": {
      "type": "object",
      "required": ["name", "type", "scope", "mutable"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "object", "array"]
        },
        "defaultValue": {},
        "description": {
          "type": "string"
        },
        "scope": {
          "type": "string",
          "enum": ["global", "local"]
        },
        "mutable": {
          "type": "boolean"
        }
      }
    },
    "workflowInput": {
      "type": "object",
      "required": ["name", "type", "required"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "type": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "default": {},
        "validation": {
          "type": "object",
          "properties": {
            "pattern": { "type": "string" },
            "min": { "type": "number" },
            "max": { "type": "number" },
            "enum": { "type": "array" }
          }
        }
      }
    },
    "workflowOutput": {
      "type": "object",
      "required": ["name", "type", "source"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      }
    },
    "workflowTrigger": {
      "type": "object",
      "required": ["id", "type", "enabled", "config"],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["manual", "schedule", "webhook", "email", "file", "database", "event"]
        },
        "enabled": {
          "type": "boolean"
        },
        "config": {
          "type": "object"
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/triggerCondition"
          }
        }
      }
    },
    "triggerCondition": {
      "type": "object",
      "required": ["field", "operator", "value"],
      "properties": {
        "field": {
          "type": "string"
        },
        "operator": {
          "type": "string"
        },
        "value": {}
      }
    }
  }
}